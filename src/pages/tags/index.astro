---
import BaseLayout from '../../layouts/Layout.astro';
const allPosts = Object.values(import.meta.glob('../../content/posts/*.md', { eager: true }));
const tags = [
  ...new Set(
    allPosts
      .map((post: any) => post.frontmatter.tags || []) // 如果 tags 不存在，就用空数组代替
      .flat()
      .filter((tag) => typeof tag === 'string' && tag.trim() !== '') // 过滤掉非字符串和空字符串
  )
];
const pageTitle = "标签索引";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    margin-top: 60px;
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>
